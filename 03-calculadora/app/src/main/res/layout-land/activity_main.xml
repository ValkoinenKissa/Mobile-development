<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/calculator_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFF"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="end|center"
            android:importantForAccessibility="no"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:labelFor="@+id/calculator_display"
            android:padding="16dp"
            android:textColor="#000000"
            android:textSize="90sp" />

        <requestFocus />

        <!-- Primera fila -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6">

            <Button
                android:id="@+id/seven_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#DBE2EA"
                android:gravity="center"
                android:text="@string/seven"
                android:textColor="#1B1C1D"
                android:textSize="16sp" />

            <Button
                android:id="@+id/eight_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#DBE2EA"
                android:gravity="center"
                android:text="@string/eight"
                android:textColor="#1B1C1D"
                android:textSize="16sp" />

            <Button
                android:id="@+id/nine_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#DBE2EA"
                android:gravity="center"
                android:text="@string/nine"
                android:textColor="#1B1C1D"
                android:textSize="16sp" />

            <Button
                android:id="@+id/ac_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#D2E2FB"
                android:gravity="center"
                android:text="@string/ac"
                android:textColor="#0640A1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/multiplication_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#C2E6FD"
                android:gravity="center"
                android:text="@string/multiplication"
                android:textColor="#004873"
                android:textSize="16sp" />

            <Button
                android:id="@+id/square_root_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#C2E6FD"
                android:gravity="center"
                android:text="@string/square_root"
                android:textColor="#004873"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Segunda fila -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6">

            <Button
                android:id="@+id/four_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#DBE2EA"
                android:gravity="center"
                android:text="@string/four"
                android:textColor="#1B1C1D"
                android:textSize="16sp" />

            <Button
                android:id="@+id/five_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#DBE2EA"
                android:gravity="center"
                android:text="@string/five"
                android:textColor="#1B1C1D"
                android:textSize="16sp" />

            <Button
                android:id="@+id/six_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#DBE2EA"
                android:gravity="center"
                android:text="@string/six"
                android:textColor="#1B1C1D"
                android:textSize="16sp" />

            <Button
                android:id="@+id/parentheses_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#C2E6FD"
                android:gravity="center"
                android:text="@string/parentheses"
                android:textColor="#004873"
                android:textSize="16sp" />

            <Button
                android:id="@+id/minus_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#C2E6FD"
                android:gravity="center"
                android:text="@string/minus"
                android:textColor="#004873"
                android:textSize="16sp" />

            <Button
                android:id="@+id/pi_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#C2E6FD"
                android:gravity="center"
                android:text="@string/pi_button"
                android:textColor="#004873"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Tercera fila -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6">

            <Button
                android:id="@+id/one_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#DBE2EA"
                android:gravity="center"
                android:text="@string/one"
                android:textColor="#1B1C1D"
                android:textSize="16sp" />

            <Button
                android:id="@+id/two_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#DBE2EA"
                android:gravity="center"
                android:text="@string/two"
                android:textColor="#1B1C1D"
                android:textSize="16sp" />

            <Button
                android:id="@+id/three_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#DBE2EA"
                android:gravity="center"
                android:text="@string/three"
                android:textColor="#1B1C1D"
                android:textSize="16sp" />

            <Button
                android:id="@+id/percentage_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#C2E6FD"
                android:gravity="center"
                android:text="@string/percentage"
                android:textColor="#004873"
                android:textSize="16sp" />

            <Button
                android:id="@+id/plus_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#C2E6FD"
                android:gravity="center"
                android:text="@string/plus"
                android:textColor="#004873"
                android:textSize="16sp" />

            <Button
                android:id="@+id/caret_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#C2E6FD"
                android:gravity="center"
                android:text="@string/caret_button"
                android:textColor="#004873"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Cuarta fila -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6">

            <Button
                android:id="@+id/zero_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#DBE2EA"
                android:gravity="center"
                android:text="@string/number_zero"
                android:textColor="#1B1C1D"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/dot_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#DBE2EA"
                android:gravity="center"
                android:text="@string/dot"
                android:textColor="#1B1C1D"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/delete_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#DBE2EA"
                android:contentDescription="@string/borrar"
                app:icon="@drawable/backspace"
                app:iconGravity="textStart"
                app:iconSize="16dp"
                app:iconTint="#000000"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/split_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#C2E6FD"
                android:gravity="center"
                android:text="@string/split"
                android:textColor="#004873"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/factorial_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#C2E6FD"
                android:gravity="center"
                android:text="@string/factorial_button"
                android:textColor="#004873"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/equal_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#146C2F"
                android:gravity="center"
                android:text="@string/equal"
                android:textColor="#FDFDFD"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
